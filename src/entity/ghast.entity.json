{
  "format_version": "1.10.0",
  "minecraft:client_entity": {
    "description": {
      "identifier": "minecraft:ghast",
      "materials": { "default": "ghast" },
      "textures": {
        "default": "textures/entity/ghast/ghast",
        "shooting": "textures/entity/ghast/ghast_shooting"
      },
      "geometry": {
        "default": "geometry.ghast"
      },
      "spawn_egg": {
        "texture": "spawn_egg",
        "texture_index": 19
      },
      "scripts": {
        "should_update_bones_and_effects_offscreen": true,
        "animate": [
          "move_controller",
          "scale_controller"
        ]
      },
      "animations": {
        "move": "animation.ghast.move",
        "scale": "animation.ghast.scale",
        "move_controller": "controller.animation.ghast.move",
        "scale_controller": "controller.animation.ghast.scale"
      },
      "render_controllers": [ "controller.render.ghast" ]
    }
  }
}